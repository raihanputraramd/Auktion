<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityUser.UserProfileActivity">

    <ImageButton
        android:id="@+id/ib_back_userProfile"
        style="@style/btn_back"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/iv_admin_profile"
        style="@style/ib_user"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:padding="@dimen/_30sdp"
        android:src="@drawable/ic_account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_desc_profile"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_admin_profile">

        <TextView
            android:id="@+id/tv_username_userProfile"
            style="@style/txtHead.txtSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="raihanputraramd"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:id="@+id/tv_namaUser_userProfile"
            style="@style/txtHead.txtSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_36sdp"
            tools:text="Raihan Putra Ramadhan"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:id="@+id/tv_telepon_userProfile"
            style="@style/txtHead.txtSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_36sdp"
            tools:text="08156210381"
            android:textSize="@dimen/_20ssp" />

        <Button
            android:id="@+id/btn_logOut_userProfile"
            style="@style/btn_pasang_penawaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="@string/log_out" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>