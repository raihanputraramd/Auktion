<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txtHead">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_40ssp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtNormal">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtHead.txtSub">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="bgView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_36sdp</item>
        <item name="android:layout_marginTop">@dimen/_36sdp</item>
        <item name="android:layout_marginEnd">@dimen/_36sdp</item>
    </style>

    <style name="edt_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
    </style>

    <style name="edt_base.modal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_36sdp</item>
        <item name="android:layout_marginStart">@dimen/_36sdp</item>
        <item name="android:layout_marginEnd">@dimen/_36sdp</item>
        <item name="android:background">@drawable/bg_login</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingStart">@dimen/_36sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_36sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_26ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="btn.register">
        <item name="android:background">@drawable/bg_register</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">@dimen/_50sdp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="btn.register.mini">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="item_desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_30ssp</item>
    </style>

    <style name="item_desc.money">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:layout_marginEnd">@dimen/_26sdp</item>
    </style>

    <style name="btn_back">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginTop">@dimen/_13sdp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/bg_back</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="btn_pasang_penawaran">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/btn_bottom_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ib_user">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:background">@drawable/bg_icon_profile</item>
    </style>

    <style name="rv_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_120sdp</item>
    </style>

    <style name="fab_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="android:backgroundTint">@color/bgShape</item>
    </style>

    <style name="fab_main.sub">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="txtHead.txtSub.fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_login</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>
